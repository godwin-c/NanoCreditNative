<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/green_grey_bg"
    tools:context=".fragments.forLoans.ShowLoanAmountFragment">

   <LinearLayout
       android:layout_height="match_parent"
       android:layout_width="match_parent"
       android:gravity="center"
       android:padding="40dp"
       android:orientation="vertical">

       <TextView
           android:id="@+id/app_name_display"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginBottom="20dp"
           android:text="Loan Amount"
           android:textColor="@color/colorAccent"
           android:textSize="20sp" />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:layout_marginBottom="10dp"
           android:orientation="horizontal">


           <TextView
               android:id="@+id/show_loan_amount_inst_text"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="3"
               android:gravity="center"
               android:layout_gravity="center"
               android:textStyle="bold"
               android:text="@string/after_analysing_the_information_"
               android:textColor="@color/grey"
               android:textSize="15sp" />
       </LinearLayout>

       <EditText
           android:id="@+id/show_loan_amount_dialog_loan_amount_amount"
           android:layout_width="match_parent"
           android:layout_height="48dp"
           android:layout_margin="10dp"
           android:background="@drawable/button_bg"
           android:hint="(leave blank for maximum credit limit)"
           android:paddingLeft="20dp"
           android:inputType="number"
           android:textSize="12dp"
           android:textStyle="bold"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="20dp"
           android:orientation="horizontal">

           <Button
               android:id="@+id/show_loan_amount_dialog_loan_amount_btn_no"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_margin="5dp"
               android:layout_weight="1"
               android:background="@drawable/button_bg_cancel"
               android:text="Cancel"
               android:textColor="@color/white" />

           <Button
               android:id="@+id/show_loan_amount_dialog_loan_amount_btn_yes"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_margin="5dp"
               android:layout_weight="1"
               android:background="@drawable/button_bg_purple"
               android:text="Proceed"
               android:textColor="@color/white" />

       </LinearLayout>

   </LinearLayout>

</FrameLayout>