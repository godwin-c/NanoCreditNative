<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_pone_number_select"
    android:padding="2dp"
    tools:context=".fragments.PhoneNumberSelectFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_margin="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/phone_code_spinner"
                android:layout_width="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/all_side_rounded_no_bg"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/country_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:text=""/>

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_register_phonenumber"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:padding="2dp"
            android:textColorHint="#cccccc">

            <EditText
                android:id="@+id/register_phonenumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@null"
                android:backgroundTint="#ffff"
                android:hint="  Enter Phone Number"
                android:inputType="phone"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

</FrameLayout>