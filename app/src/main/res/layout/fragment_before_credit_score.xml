<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.forLoans.BeforeCreditScoreFragment">

    <LinearLayout
        android:id="@+id/before_credit_score_proceed_to_credit_score"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/white_bg"
        android:gravity="center"
        android:visibility="visible"
        android:orientation="vertical"
        android:padding="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="@string/warning_about_prioritydata"
            android:textColor="@color/grey"
            android:textSize="15sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/before_credit_score_proceed_to_credit_score_btn_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_bg_cancel"
                android:text="Cancel"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/before_credit_score_proceed_to_credit_score_btn_yes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_bg_purple"
                android:text="ok"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>